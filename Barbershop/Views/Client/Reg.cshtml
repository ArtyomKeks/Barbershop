@using Barbershop.Controllers
@using Barbershop.Features
@model EditClient
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Регистрация</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        .header {
            background-color: #333;
            color: white;
            padding: 1em 0;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2em;
            text-align: center;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #000;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            color: #333;
            margin-bottom: 5px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .btn-primary {
            display: inline-block;
            padding: 10px 20px;
            background-color: #343a40;
            color: #fff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
            margin: 5px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #23272b;
            }

        footer {
            margin-top: 20px;
            text-align: center;
        }

            footer a {
                color: #007bff;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="header">
        <h1>Регистрация</h1>
    </div>
    <div class="container">
        <h2>Заполните форму для записи</h2>
        @using (Html.BeginForm(nameof(ClientController.CreateClientView), ClientController.Registr, FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(x => x.Name, "Ваше имя:")
                @Html.TextBoxFor(x => x.Name)
                @Html.ValidationMessageFor(x => x.Name)

                @Html.LabelFor(x => x.Surname, "Ваша фамилия:")
                @Html.TextBoxFor(x => x.Surname)
                @Html.ValidationMessageFor(x => x.Surname)

                @Html.LabelFor(x => x.LastName, "Ваше отчество:")
                @Html.TextBoxFor(x => x.LastName)
                @Html.ValidationMessageFor(x => x.LastName)

                @Html.LabelFor(x => x.Email, "Ваш email:")
                @Html.TextBoxFor(x => x.Email)
                @Html.ValidationMessageFor(x => x.Email)

                <label>Выберите день для записи:</label>
                <button type="submit" name="Day" value="Понедельник" class="btn-primary">Понедельник</button>
                <button type="submit" name="Day" value="Вторник" class="btn-primary">Вторник</button>
                <button type="submit" name="Day" value="Среду" class="btn-primary">Среда</button>
                <button type="submit" name="Day" value="Четверг" class="btn-primary">Четверг</button>
                <button type="submit" name="Day" value="Пятницу" class="btn-primary">Пятница</button>
                <button type="submit" name="Day" value="Субботу" class="btn-primary">Суббота</button>
                <button type="submit" name="Day" value="Воскресенье" class="btn-primary">Воскресенье</button>
            </div>
        }
    </div>
    <footer>
        <a href="@Url.Action(nameof(HomeController.Index), "Home")" class="btn-primary">На главную</a>
    </footer>
</body>
</html>